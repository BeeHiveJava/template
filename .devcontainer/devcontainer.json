{
  "name": "template",
  "image": "mcr.microsoft.com/devcontainers/base:debian",
  "postCreateCommand": "pre-commit install --install-hooks",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": "latest",
    "ghcr.io/devcontainers-contrib/features/pipx-package:1": {
      "package": "editorconfig-checker",
      "version": "latest"
    },
    "ghcr.io/devcontainers-contrib/features/pre-commit:2": "latest",
    "ghcr.io/devcontainers-contrib/features/yamllint:2": "latest"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "EditorConfig.EditorConfig",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}
